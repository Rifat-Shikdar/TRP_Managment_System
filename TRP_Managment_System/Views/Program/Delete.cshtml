@model TRP_Managment_System.DTOs.ProgramDTO

@{
    ViewBag.Title = "Delete Program";
}

<h2>Delete Program</h2>

<h4 class="alert alert-warning">Are you sure you want to delete this program?</h4>
<div>
    <h4 class="text-success">Program Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProgramName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProgramName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TRPScore)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TRPScore)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ChannelId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ChannelId)
        </dd>
        @*<dd>
            @Model.Channel != null && @Model.Channel.ChannelName != null
                ? @Model.Channel.ChannelName
                : "No channel assigned"
        </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.AirTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AirTime)
        </dd>
    </dl>

    @*<p class="alert alert-warning">Are you sure you want to delete this program?</p>*@

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ProgramId)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
