
@model IEnumerable<TRP_Managment_System.DTOs.ProgramDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2><br/>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProgramId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TRPScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChannelId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AirTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TRPScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChannelId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProgramId  } ,new { @class = "btn btn-secondary" }) 
                @Html.ActionLink("Details", "Details", new { id = item.ProgramId }, new { @class = "btn btn-success" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.ProgramId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
